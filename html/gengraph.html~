    <body>
    <script>
var n = 3
var vertices = range(0,n).map(x => [cos(x*2*pi/n),sin(x*2*pi/n)])

function step([x,y])
{
    var [a,b] = vertices.sample()
    return [(a+x)/2,(b+y)/2]
}

var pts = nestList(step,[0,0],50000)

new Graphics(createSVG('fig'),{size:900,'aspectRatio':1})
    .xRange([-1,1])
    .yRange([-1,1])
    .listPlot(pts,{'pointSize':1,'class':'pt'})
</script>
    </body>
